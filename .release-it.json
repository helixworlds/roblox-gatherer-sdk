{
  "hooks": {
    "before:init": "git fetch --prune --prune-tags origin"
  },
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "releaseNotes": "./generate-release-notes.sh ${tagName}"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  }
}
